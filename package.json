{
  "name": "responsive-photo-gallery",
  "version": "0.2.8",
  "private": true,
  "scripts": {
    "eslint": "eslint .",
    "debug": "IMAGE_PATH=./debug-data/pics AUTH_PATH=./debug-data/data/auth PRIVATE_KEY=nonvolatile THUMB_PATH=./debug-data/data/thumbs TAGS_PATH=./debug-data/data/tags PORT=8000 DEBUG=express,responsive-photo-gallery:* npm start",
    "build-debug-frontend": "PUBLIC_URL=/ npm run build-frontend",
    "build-frontend": "cd frontend; npm run build; cd ..",
    "start": "node ./bin/www"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "frontend"
    ],
    "env": {
      "jest": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^(next|reject)$"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "fast-image-processing": "github:jwater7/fast-image-processing#29b535cb10e2d4cc151d16fdd3b6a9c7f2b78aa5",
    "http-errors": "^1.7.3",
    "jwt-user-auth": "github:jwater7/jwt-user-auth#e230f6e421efdd7e4cf4d1331b58d27805bf1a1b",
    "mkdirp": "^1.0.4",
    "morgan": "~1.9.0",
    "passport": "^0.4.1",
    "passport-jwt-cookiecombo": "^1.0.5",
    "pug": "2.0.0-beta11",
    "query-string": "^6.0.0",
    "sanitize-filename": "^1.6.1",
    "serve-favicon": "~2.4.5",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^2.0.9"
  },
  "description": "NodeJS backend to serve a photo collection in a mobile-friendly and beautiful way",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwater7/responsive-photo-gallery.git"
  },
  "keywords": [
    "photo",
    "picture",
    "image",
    "gallery",
    "album"
  ],
  "author": "j",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jwater7/responsive-photo-gallery/issues"
  },
  "homepage": "https://github.com/jwater7/responsive-photo-gallery#readme",
  "devDependencies": {
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5"
  }
}
